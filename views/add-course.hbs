<h1>Add course</h1>
<hr>
<form action="/add-course" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Please input course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="5">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Please input course price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Course image URL</label>
        <span class="helper-text" data-error="Please input course image URL"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>
