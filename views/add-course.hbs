<h1>Add course</h1>
<hr>
<form action="/add-course" method="POST" novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{data.title}}" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Please input course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{data.price}}" required min="5">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Please input course price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{data.img}}" required>
        <label for="img">Course image URL</label>
        <span class="helper-text" data-error="Please input course image URL"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{@root.csrf}}">

    <button class="btn btn-primary">Add course</button>

    {{#if error}}
        <p class="alert">{{error}}</p>
    {{/if}}
</form>
