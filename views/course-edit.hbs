<h1>Edit course {{course.title}}</h1>
<hr>
<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Please input course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="5" value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Please input course price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Course image URL</label>
        <span class="helper-text" data-error="Please input course image URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{@root.csrf}}">

    <button type="submit" class="btn btn-primary">Save edited course data</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
    
    <button type="submit" class="btn red">Remove course</button>
</form>
