<h1>Shopping cart</h1>
<hr>

<div id="cart">
    {{#if courses.length}}

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}

            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Remove</button>
                </td>
            </tr>

            {{/each}}
        </tbody>
    </table>

    <p><strong>Price:</strong> <span class="price">{{price}}</span></p>
</div>

{{else}}

<p>Shopping cart is empty</p>

{{/if}}


