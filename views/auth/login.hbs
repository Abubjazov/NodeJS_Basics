<div class="auth">
  <div class="row">

    <div class="col s12">        
      <ul class="tabs">

        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#registration">Registration</a></li>

      </ul>
    </div>

    <div id="login" class="col s9 offset-s3">
        <h1>Login to the store</h1>

        <form action="/auth/login" method="POST">

            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Please input your email"></span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Please input password"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{@root.csrf}}">

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <div id="registration" class="col s9 offset-s3">
        <h1>Register in the store</h1>

        <form action="/auth/registration" method="POST">

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Please input your name"></span>
            </div>

            <div class="input-field">
                <input id="reg-email" name="email" type="email" class="validate" required>
                <label for="reg-email">Email</label>
                <span class="helper-text" data-error="Please input your email"></span>
            </div>

            <div class="input-field">
                <input id="reg-password" name="password" type="password" class="validate" required>
                <label for="reg-password">Password</label>
                <span class="helper-text" data-error="Please input password"></span>
            </div>

            <div class="input-field">
                <input id="confirm-password" name="confirm-password" type="password" class="validate" required>
                <label for="confirm-password">Confirm password</label>
                <span class="helper-text" data-error="Please confirm password"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{@root.csrf}}">

            <button type="submit" class="btn btn-primary">Register now</button>
        </form>
    </div>

  </div>
</div>  
